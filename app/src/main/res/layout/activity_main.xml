<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/inspiration"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/motion_control_neue_lite"
            android:gravity="center"
            android:text="POINTLESS"
            android:textSize="@dimen/_75sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/motion_control_neue_lite"
            android:gravity="center"
            android:text="BUTTON"
            android:textSize="@dimen/_107sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Warning: Pointless"
            android:textSize="@dimen/_22sdp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pointlessButton"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            android:elevation="@dimen/_2sdp"
            app:backgroundTint="@color/black"
            app:borderWidth="@dimen/_2sdp"
            app:elevation="@dimen/_2sdp"
            tools:ignore="RedundantDescriptionCheck" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/inspiration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Space
                android:layout_width="@dimen/_400sdp"
                android:layout_height="@dimen/_40sdp" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp"/>

            <CheckBox
                android:id="@+id/soundCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:text="Play a sound"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp" />

            <Button
                android:id="@+id/inspirationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_black"
                android:text="Inspiration"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp" />
        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>